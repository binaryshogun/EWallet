<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:EWallet.Controls">
    <!--Common BindablePasswordBox style-->
    <Style TargetType="{x:Type controls:BindablePasswordBox}">
        <Setter
            Property="Margin"
            Value="10" />
        <Setter
            Property="Foreground"
            Value="{StaticResource ForegroundColor}" />
        <Setter
            Property="FontSize"
            Value="24" />
        <Setter
            Property="FontFamily"
            Value="Cascadia Mono" />
        <Setter
            Property="FontWeight"
            Value="Light" />
    </Style>
</ResourceDictionary>