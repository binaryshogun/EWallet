<UserControl
    x:Class="EWallet.Views.TransferView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewmodels="clr-namespace:EWallet.ViewModels"
    xmlns:controls="clr-namespace:EWallet.Controls"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="1024"
    d:DataContext="{d:DesignInstance Type=viewmodels:TransferViewModel}">

    <Grid>
        <controls:CloseModalButton 
            Command="{Binding CloseModalCommand}"
            ToolTip="Закрыть окно перевода"/>

        <Grid
            Grid.Row="1"
            Margin="0 0 0 30"
            VerticalAlignment="Center">

            <controls:CardForm
                Grid.Column="1" />
        </Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
    </Grid>
</UserControl>
